generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  user_id String
  title String 
  content String
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now())

  @@index([user_id])
}